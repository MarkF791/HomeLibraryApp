@model IEnumerable<HomeLibraryApp.Models.book>

@{
    ViewBag.Title = "Index";
}

<h2>Books</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Author
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Year Released
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.author.FirstName) @Html.DisplayFor(modelItem => item.author.MiddleName) @Html.DisplayFor(modelItem => item.author.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.YearReleased)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ISBN)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Book_id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Book_id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Book_id })
    </td>
</tr>
}

</table>
